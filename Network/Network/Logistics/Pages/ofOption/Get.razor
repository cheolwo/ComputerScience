@page "/Get/Commodity/Option/{CommodityNo}"

<h3>Option</h3>
<MatButton Raised="true" @onclick="AddDialogSwitch">Add</MatButton>

@if (Options.Count == 0)
{
    <p>Add, Option!</p>
}
else
{
    <MatTable Items="@Options" class="mat-elevation-z5">
        <MatTableHeader>
            <th>Commodity</th>
            <th>Name</th>
            <th>Value</th>
            <th>SalePrice</th>
            <th>Quantity</th>
            <th>Managed</th>
        </MatTableHeader>
        <MatTableRow>
            <td>@context.Commodity</td>
            <td>@context.Name</td>
            <td>@context.Value</td>
            <td>@context.SalePrice</td>
            <td>@context.Quantity</td>
            <td>
                <MatButton OnClick="UpdateDialogSwitch">Update</MatButton>
                <MatButton OnClick="DeleteDialogSwitch">Delete</MatButton>
                <MatButton><a href="/Commodity/Option/@Option.OptionNo">Detail</a></MatButton>
            </td>
        </MatTableRow>
    </MatTable>
}
@if (AddDialogIsOpen)
{
<MatDialog @bind-IsOpen="@AddDialogIsOpen">
    <MatDialogTitle>Add_Option</MatDialogTitle>
    <EditForm EditContext="EditContext">
        <MatDialogContent>
            <DataAnnotationsValidator></DataAnnotationsValidator>
            <div class="mat-layout-grid-cell mat-layout-grid-cell-span-4">
                <p><MatTextField @bind-Value="@Option.Name">Name</MatTextField></p>
                <ValidationMessage For="@(() =>Option.Name)" />
                <p><MatTextField @bind-Value="@Option.Value">Value </MatTextField></p>
                <ValidationMessage For="@(() =>Option.Value)" />
                <p><MatTextField @bind-Value="@Option.NormalPrice">NormalPrice</MatTextField></p>
                <ValidationMessage For="@(() =>Option.NormalPrice)" />
                <p><MatTextField @bind-Value="@Option.SalePrice">SalePrice</MatTextField></p>
                <ValidationMessage For="@(() =>Option.SalePrice)" />

                <p><MatTextField @bind-Value="@Option.SellerCodeofCommodity">SellerCode</MatTextField></p>
                <p><MatTextField @bind-Value="@Option.ModelNo">ModelNo</MatTextField></p>
                <p><MatTextField @bind-Value="@Option.CommotityBarcode">Barcode</MatTextField></p>
                <p><MatNumericUpDownField @bind-Value="@Option.Quantity">Quantity</MatNumericUpDownField></p>
                <p><MatFileUpload OnChange="FileUpload" Label="Drop files here or Browse">옵션 이미지</MatFileUpload></p>
            </div>      
        </MatDialogContent>
        <MatDialogActions>
            <MatButton OnClick="@(e => { AddDialogIsOpen = false; })">No Thanks</MatButton>
            <MatButton Type="submit" OnClick="Add" Raised="true">등록</MatButton>
        </MatDialogActions>
    </EditForm>
</MatDialog>
}

